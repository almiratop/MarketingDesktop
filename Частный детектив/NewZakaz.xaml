<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Частный_детектив"
        xmlns:SqlClient="clr-namespace:System.Data.SqlClient;assembly=System.Data" x:Class="Частный_детектив.NewZakaz"
        mc:Ignorable="d"
        Title="Новый заказ" Height="400" Width="400" Loaded="Window_Loaded" Closed="Window_Closed" MinWidth="400" MinHeight="400" Icon="log.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/logo.png" />

        <Label Content="Услуга" Grid.Row="1"/>
        <ComboBox x:Name="listBox1" Grid.Row="2" Margin="20,0,20,0" FontSize="16"/>
            <Label Content="Пожелания" Grid.Row="3"/>
        <TextBox x:Name="textBoxTextUslugi" Grid.Row="4" />
        <Button Content="Создать заказ" Grid.Row="7" Click="Button_Click"/>

    </Grid>
</Window>

